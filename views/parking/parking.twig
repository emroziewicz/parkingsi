{% extends 'template.twig' %}
{% set active = 'parking' %}

{% block content %}
    <div class="row mb-2">
        <div class="col-md-3">
            <div class="card flex-md-row mb-4 box-shadow center-block">
                <div class="card-body d-flex flex-column" style="text-align: center;">
                    <form method="post" action="{{ path('parking_save') }}">
                        <input type="text" name="name" class="form-control" placeholder="{{ 'place_number'|trans }}" autofocus/>
                        <input type="submit" class="btn btn-outline-primary" value="{{ 'save'|trans }}"/>
                    </form>
                </div>
            </div>
        </div>

        {% for place in places %}
            <div class="col-md-3">
                <div class="card flex-md-row mb-4 box-shadow center-block">
                    <div class="card-body d-flex flex-column" style="text-align: center;">
                        <h3 class="mb-0">{{ place.name }}</h3>
                        <a class="btn btn-outline-primary" href="{{ path('parking_delete', { id: place.id}) }}">{{ 'delete'|trans }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
