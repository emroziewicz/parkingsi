<!doctype html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="System rezerwacji parkingowej">
    <meta name="author" content="Ewelina Mroziewicz">

    <title>{{ 'app.name'|trans }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('lib/bootstrap-4.1.1/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/css/template.css') }}" rel="stylesheet">

</head>

<body class="text-center">
<form class="form-signin" method="post" action="{{ path('register_save') }}">
    <h1 class="h3 mb-3 font-weight-normal">{{ 'register'|trans }}</h1>
    {% set info_message = app.session.flashbag.get('error') %}
    {% if info_message|length > 0 %}
        {% for flash_message in info_message %}
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                {{ flash_message|trans }}
            </div>
        {% endfor %}
    {% endif %}

    {% set info_message = app.session.flashbag.get('success') %}
    {% if info_message|length > 0 %}
        {% for flash_message in info_message %}
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                {{ flash_message|trans }}
            </div>
        {% endfor %}
    {% endif %}

    <label for="inputEmail" class="sr-only">{{ 'email'|trans }}</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="{{ 'email'|trans }}" name="email"  autofocus>
    <label for="inputPassword" class="sr-only">{{ 'password'|trans }}</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="{{ 'password'|trans }}" name="password" >
    <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'register2'|trans }}</button>
    <p class="mt-3"><a href="{{ path('login') }}">{{ 'login'|trans }}</a> </p>
    <p class="mt-2 mb-3 text-muted">&copy; {{ "now"|date("Y") }}</p>
</form>
</body>
</html>
